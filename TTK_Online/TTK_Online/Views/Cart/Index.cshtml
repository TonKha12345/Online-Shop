@model List<Models.Model.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter {
    <script src="/Assets/Client/js/Controller/CartController.js"></script>
    }
<div class="content">
    <div class="section group">

        @if (Model.Count > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Mã sản phẩm</th>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Ảnh sản phẩm</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Đơn giá</th>
                        <th scope="col">Thành tiền</th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.Code</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Images" width="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity"/></td>
                            <td>@(item.Product.Price.HasValue ? item.Product.Price.Value.ToString("N0") : "0")</td>
                            <td>@(item.Product.Price.HasValue ? (item.Product.Price.Value * item.Quantity).ToString("N0") : "Liên hệ")</td>
                            <td>
                                <a href="xoa/@item.Product.MetaTitle-@item.Product.ID">Xóa</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="clear"></div>
            <br />
            <button id="btnContinue" class="btn btn-primary">Tiếp tục muc hàng</button>
            <button id="btnUpdate" class="btn btn-primary">Cập nhật giỏ hàng</button>
            <button id="btnDeleteAll" class="btn btn-primary">Xóa tất cả</button>
            <button id="btnPayment" class="btn btn-primary">Thanh toán</button>
        }
        else
        {
            <span class="alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
        }



    </div>
</div>


