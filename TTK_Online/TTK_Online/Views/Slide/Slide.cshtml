@model List<Models.EF.Slide>
    @{ 
        var slide = (Models.EF.Slide)ViewBag.First;
    }

<div class="slider">
    <div id="slider">
        <div id="mover">
            <div id="slide-1" class="slide">
                <div class="slider-img">
                    <a href="@slide.Link"><img src="@slide.Images" alt="learn more" /></a>
                </div>
                <div class="slider-text">
                    <h1>Clearance<br><span>SALE</span></h1>
                    <h2>UPTo 20% OFF</h2>
                    <div class="features_list">
                        <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                    </div>
                    <a href="@slide.Link" class="button">Shop Now</a>
                </div>
                <div class="clear"></div>
            </div>

            @foreach (var item in Model)
            {
                <div class="slide">
                    <div class="slider-text">
                        <h1>Clearance<br><span>SALE</span></h1>
                        <h2>UPTo 40% OFF</h2>
                        <div class="features_list">
                            <h4>Get to Know More About Our Memorable Services</h4>
                        </div>
                        <a href="@item.Link" class="button">Shop Now</a>
                    </div>
                    <div class="slider-img">
                        <a href="@item.Link"><img src="@item.Images" alt="learn more" /></a>
                    </div>
                    <div class="clear"></div>
                </div>
            }
        </div>
    </div>
    <div class="clear"></div>
</div>
