@model Models.Model.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal mt-3">
            <h1>ĐĂNG NHẬP</h1>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                <div class="row">
                    <div class="col-xl-1 mt-2">@Html.LabelFor(model => model.UserName, new { @class = "form-label" })</div>
                    <div class="col-xl-4">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "formGroupExampleInput", @placeholder = "Enter your UserName" })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-xl-1 mt-2">@Html.LabelFor(model => model.Password, new { @class = "form-label" })</div>
                    <div class="col-xl-4">
                        @Html.PasswordFor(model => model.Password, new { @type = "password", @class = "form-control", @id = "formGroupExampleInput", @placeholder = "Enter your Password" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group ml-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

